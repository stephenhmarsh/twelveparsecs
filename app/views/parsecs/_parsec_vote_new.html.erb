<!-- no votes -->

<%= form_for(@parsec_user_vote, url: parsec_user_votes_path, html: {method: "post", class: "parsec-vote-up"}, ) do |f| %>
	<%= f.hidden_field(:vote, value: 1)%>
	<%= f.hidden_field(:parsec_id, value: parsec.id)%>
	<%= f.submit("Upvote") %>
<% end %>

<%= parsec.score %>

<%= form_for(@parsec_user_vote, url: parsec_user_votes_path, html: {method: "post", class: "parsec-vote-down"}) do |f| %>
	<%= f.hidden_field(:vote, value: -1)%>
	<%= f.hidden_field(:parsec_id, value: parsec.id)%>
	<%= f.submit("Downvote") %>
<% end %>
