<!-- already downvoted -->

<%= form_for(@comment_user_vote, url: comment_user_vote_path(old_vote.id), html: {method: "patch", class: "parsec-vote-up"}) do |f| %>
	<%= f.hidden_field(:vote, value: 1)%>
	<%= f.submit("Upvote") %>
<% end %>

<%= comment.score %>

<%= form_for(@comment_user_vote, url: comment_user_vote_path(old_vote.id), html: {method: "delete", class: "parsec-voted-down"}) do |f| %>
	<%= f.submit("Unvote") %>
<% end %>
